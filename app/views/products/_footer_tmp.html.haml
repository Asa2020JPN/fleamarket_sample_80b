%aside.appAd
  .inner
    %h2 だれでもかんたんに、人生を変えるフリマアプリ
    %p 今すぐ無料ダウンロード！
  .innerIcon
    = link_to image_tag("material/stricon/app-store-9c5e28e8f81bd9912e0ded2f78821e04778a1356c05dc7c7bf1e88614be37c34.svg",width: '180', alt: "App画像"), 'https://www.apple.com/jp/app-store/', {class: 'appIcon'}
    = link_to image_tag("material/stricon/google-play-469c63f1269e456307c4dde176b33cc3bbbbf142ac4d7369656010130149db1a.svg",width: '180', alt: "Google画像"), 'https://play.google.com/store/apps?hl=ja&gl=US', {class: 'gooIcon'}
.footer-contena
  %ul.conTexts
    %li.conText
      %h2.conText__head FURIMAについて
      %ul
        %li
          = link_to "会社概要(運営会社)", '#', {class: 'linkText'}
        %li
          = link_to "プライバシーポリシー", '#', {class: 'linkText'}
        %li
          = link_to "FURIMA利用規約", '#', {class: 'linkText'}
        %li
          = link_to "ポイントに関する規約", '#', {class: 'linkText'}
    %li.conText
      %h2.conText__head FURIMAを見る
      %ul
        %li
          = link_to "カテゴリー一覧", '#', {class: 'linkText'}
        %li
          = link_to "ブランド一覧", '#', {class: 'linkText'}
    %li.conText
      %h2.conText__head ヘルプ＆ガイド
      %ul
        %li
          = link_to "FURIMAガイドライン", '#', {class: 'linkText'}
        %li
          = link_to "FURIMAロゴ利用ガイドライン", '#', {class: 'linkText'}
        %li
          = link_to "お知らせ", '#', {class: 'linkText'}
  .footer__logo
    = link_to image_tag("material/logo/logo-white.png",width: '160',  height: '46.34', alt: "FURIMA画像"), root_path, {class: 'appLogo'}
  %p © FURIMA
= link_to root_path do
  .cameraBtn
    %span.cameraBtn__text 出品する
    = image_tag 'material/icon/icon_camera.png', width: '54', height: '54' ,alt: 'カメラ画像',  class: 'cameraBtnImg'
