.header-top
  .header-contena
    .header-contena__top
      %h1.top-icon
        = link_to image_tag('material/logo/logo.png', alt: "FURIMA画像"), root_path, {class: 'a-image'}
      .top-searchBox
        = form_with url: "#" do |f|
          = f.text_field :content, class: 'keyWordFrom', placeholder: 'キーワードから探す'
          %button{type: "submit", class:'keyWordFromBtn'}
            = image_tag 'material/icon/icon-search 1.png', class: 'keyWordFromBtn__icon'
    .header-contena__nav
      %ul.listLeft
        %li.listLeft__item.fastCategory
          = link_to "カテゴリー", '#', {class: 'link-text'}
        %li.listLeft__item
          = link_to "ブランド", '#', {class: 'link-text'}
      %ul.listRight
        - if user_signed_in?
          %li.listRight__login
            = link_to "マイページ", mypages_path, {class: 'link-text'}
        - else
          %li.listRight__new
            = link_to "ログイン", new_user_session_path, {class: 'link-text'}
          %li.listRight__new
            = link_to "新規会員登録", new_user_registration_path, {class: 'link-text'}
