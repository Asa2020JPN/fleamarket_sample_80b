= render "purchases/form-header"
.form-wrapper
  .section
    %section.head
      %h2.head--title 発送元・お届け先住所入力
    %form.form-addresses
      = form_with url: "#", local: true do |f|
        .contents
          %section#top-group.group
            %label.group--name お名前
            %span.group--required 必須
            .input
              = f.text_field :test, placeholder: "例）山田", class: "input--style"
              %ul.error-message
                %li.error-message--text 入力してください
              = f.text_field :test, placeholder: "例）彩", class: "input--style"
              %ul.error-message
                %li.error-message--text 入力してください
          %section.group
            %label.group--name お名前カナ
            %span.group--required 必須
            .input
              = f.text_field :test, placeholder: "例）ヤマダ", class: "input--style"
              %ul.error-message
                %li.error-message--text 入力してください
              = f.text_field :test, placeholder: "例）アヤ", class: "input--style"
              %ul.error-message
                %li.error-message--text 入力してください
          %section.group
            %label.group--name 郵便番号
            %span.group--required 必須
            .input
              = f.text_field :test, placeholder: "例）123-4567", class: "input--style"
              %ul.error-message
                %li.error-message--text 入力してください
          %section.group
            %label.group--name 都道府県
            %span.group--required 必須
            .input
              = f.text_field :test, placeholder: "例）123-4567", class: "input--style"
              %ul.error-message
                %li.error-message--text 入力してください
                %li.error-message--text フォーマットが不適切です
          %section.group
            %label.group--name 市区町村
            %span.group--required 必須
            .input
              = f.text_field :test, placeholder: "例）横浜市緑区", class: "input--style"
              %ul.error-message
                %li.error-message--text 入力してください
          %section.group
            %label.group--name 番地
            %span.group--required 必須
            .input
              = f.text_field :test, placeholder: "例）青山1-1-1", class: "input--style"
              %ul.error-message
                %li.error-message--text 入力してください
          %section.group
            %label.group--name 建物名
            %span.group--any 任意
            .input
              = f.text_field :test, placeholder: "例）柳ビル103", class: "input--style"
          %section.group
            %label.group--name 電話
            %span.group--any 任意
            .input
              = f.text_field :test, placeholder: "例）09012345678", class: "input--style"
          .change
            = link_to "変更する", purchases_path, class: "change__btn"
= render "purchases/form-info"