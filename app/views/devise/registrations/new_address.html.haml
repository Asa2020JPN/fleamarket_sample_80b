= render "purchases/form-header"
.form-wrapper
  .section
    %section.head
      %h2.head--title 商品送付先住所情報
    .devise-form
      = form_for @address do |f|
        = render "devise/shared/error_messages", resource: @address
        .contents
          %section#top-field.field
            = f.label :last_name, "姓", class: "field--name"
            %span.field--required 必須
            %br/
            .input
              = f.text_field :last_name, autofocus: true, class: "input--style", placeholder: "例）山田"
          %section.field
            = f.label :first_name, "名", class: "field--name"
            %span.field--required 必須
            %br/
            .input
              = f.text_field :first_name, class: "input--style", placeholder: "例）太郎"
          %section.field
            = f.label :last_name_kana, "姓（カナ）", class: "field--name"
            %span.field--required 必須
            %br/
            .input
              = f.text_field :last_name_kana, class: "input--style", placeholder: "例）ヤマダ"
          %section.field
            = f.label :first_name_kana, "名（カナ）", class: "field--name"
            %span.field--required 必須
            %br/
            .input
              = f.text_field :first_name_kana, class: "input--style", placeholder: "例）タロウ"
          %section.field
            = f.label :postcode, "郵便番号",class: "field--name"
            %span.field--required 必須
            %br/
            .input
              = f.text_field :postcode, class: "input--style", placeholder: "例）123-4567"
          %section.field
            = f.label :prefecture_id, "都道府県",class: "field--name"
            %span.field--required 必須
            %br/
            .input
              = f.text_field :prefecture_id, class: "input--style", placeholder: "例）activeHash"
          %section.field
            = f.label :city, "市区町村",class: "field--name"
            %span.field--required 必須
            %br/
            .input
              = f.text_field :city, class: "input--style", placeholder: "例）渋谷区"
          %section.field
            = f.label :block, "番地",class: "field--name"
            %span.field--required 必須
            %br/
            .input
              = f.text_field :block, class: "input--style", placeholder: "例）道玄坂2-10-12"
          %section.field
            = f.label :building, "建物名",class: "field--name"
            %span.field--any 任意
            %br/
            .input
              = f.text_field :building, class: "input--style", placeholder: "例）新大荘８階"
          %section.field
            = f.label :phone_number, "電話番号",class: "field--name"
            %span.field--any 任意
            %br/
            .input
              = f.text_field :phone_number, class: "input--style", placeholder: "例）09012345678"
          .actions
            = f.submit "登録する", class: "actions__btn"
      //= render "devise/shared/links"
= render "purchases/form-info"